<div class="container">
  <div class="card my-5">
    <div class="card-header">
      悩み新規投稿
    </div>
    <div class="card-body">
      <%= form_with model: @problem, local: true do |f| %>
        <%= render 'shared/error_messages', model: @problem %>
        <div class="mb-3">
          <label class="form-label">タイトル</label>
          <%= f.text_field :title, {class:"form-control"} %>
        </div>
        <div class="mb-3">
          <label class="form-label">テキスト</label>
          <%= f.text_area :text, {class:"form-control", rows: "10"} %>
        </div>
        <div class="mb-3">
          <%= f.submit "投稿", {class: "btn btn-primary"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>