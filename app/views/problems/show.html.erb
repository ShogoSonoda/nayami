<% if user_signed_in? && current_user.id == @problem.user_id %>
  <%= link_to "編集", edit_problem_path(@problem.id), method: :get %>
  <%= link_to "削除", problem_path(@problem.id), method: :delete %>
<% end %>

<h1><%= @problem.title %></h1>
<p><%= @problem.text %></p>

<% if user_signed_in? %>
  <%= form_with(model: [@problem, @answer], local: true) do |f| %>
    <%= f.text_area :text, placeholder: "解決策" %>
    <%= f.submit "投稿" %>
  <% end %>
<% end %>

<% if @answers %>
  <% @answers.each do |answer| %>
    <p>
      <strong><%= answer.user.name %></strong>:
      <%= answer.text %>
    </p>
  <% end %>
<% end %>