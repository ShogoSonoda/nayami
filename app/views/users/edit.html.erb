<h3>プロフィール編集</h3>
<%= form_with model: @user do |f| %>
  <div class="card">
    <div class="card-body">
        <div class="mb-3">
          <label class="form-label">名前</label>
          <%= f.text_field :name, {class:"form-control"} %>
        </div>
        <div class="mb-3">
          <label class="form-label">email</label>
          <%= f.text_field :email, {class:"form-control"} %>
        </div>
        <div class="mb-3">
          <label class="form-label">自己紹介</label>
          <%= f.text_area :introduction, {class:"form-control", rows: "3"} %>
        </div>
        <div class="input-group mb-3">
          <label class="input-group-text">業種</label>
          <%= f.collection_select(:industry_id, Industry.all, :id, :name, {}, {class:"form-select"}) %>
        </div>
        <div class="input-group mb-3">
          <label class="input-group-text">職種</label>
          <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {}, {class:"form-select"}) %>
        </div>
        <div class="input-group mb-3">
          <label class="input-group-text">役職</label>
          <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {class:"form-select"}) %>
        </div>
        <div class="input-group mb-3">
          <label class="input-group-text">画像</label>
          <%= f.file_field :image, class: "form-control" %>
        </div>
    </div>
  </div>
  <div class="my-2 text-center">
    <%= f.submit "保存", {class: "btn"} %>
  </div>
<% end %>