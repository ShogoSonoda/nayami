<div class="container">
  <div class="card my-5">
    <div class="card-header">
      チャットルームを作る
    </div>
    <div class="card-body">
      <%= form_with model: @room, local: true do |f| %>
        <%= render 'shared/error_messages', model: @room %>
        <div class="mb-3">
          <label class="form-label">ルーム名</label>
          <%= f.text_field :name, placeholder:"ルーム名を入力して下さい", class:"form-control" %>
        </div>
        <div class="mb-3">
          <%= f.submit "ルーム作成", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>