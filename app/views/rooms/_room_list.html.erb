<h3 class="mt-3">チャットルーム一覧</h3>
<ul class="list-group">
  <% rooms.each do |room| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to "#{room.name}", room_path(room.id), class: "edit-link" %>
      <span>
        <% if user_signed_in? %>
          <% if room.room_user_by?(current_user) %>
            <%= link_to "参加中", room_room_users_path(room.id), class: "btn join", method: :delete %>
          <% else %>
            <%= link_to "参加する", room_room_users_path(room.id), class: "btn", method: :post %>
          <% end %>
        <% end %>
      </span>
    </li>
  <% end %>
</ul>